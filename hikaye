<p id="sayac"></p>
<p id="cumle"></p>
<script>
  
var oyuncusay覺 = prompt ("1.oyuncunun ismi: ") ;
var oyuncusayint = parseInt(oyuncusay覺);
var oyuncu = [];
var cumle = [];
document.getElementById("sayac").innerHTML = oyuncusay覺
for (let i = 0; i < oyuncusayint;i++) {
  oyuncu[i]=i+1;
}
function bas(){
  var text = document.getElementById("text").value;
  cumle.push(text);
  var x = oyuncu.pop()
  document.getElementById("sayac").innerHTML = x-1 
  if(oyuncu[0] !== 1){
    document.getElementById("cumle").innerHTML = cumle
  } 
}

  </script>
